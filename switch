#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int day = 0;
	int num = 0;
	printf("请输入你想输入的数字：\n");
	scanf_s("%d",&num);
	switch (day = num)
	{
	case 1:
		if (num == 1)
			printf("呵呵\n");
	case 2:
	case 3:
		printf("星期%d\n",num);
		break;
	case 4:
		printf("星期%d\n",num);
		break;
	case 5:
		printf("星期%d\n", num);
		break;
	case 6:      
		printf("星期%d\n", num);
		break;
	case 7:
		printf("星期%d\n", num);
		break;
    default:
		printf("输入错误\n");
        break;
	}
	return 0;

}
