#define _CRT_SECURE_NO_WARNINGS 1
//##############  ——> w############### ! ——> welcome to bit !  !  ！！!
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <windows.h>
int main()
{
	char arr1[] = "welcome to my home ! ! ! !";
	char arr2[] = "##########################";
	int left = 0;
	int right = strlen(arr2)-1;
	printf("%d\n", strlen(arr1));
	printf("%d\n", strlen(arr2));
	while (left <= right)
	{
		arr2[left] = arr1[left];
		arr2[right] = arr1[right];
		printf("%s\n", arr2);
		Sleep(1000);
		system("cls");//清空屏幕
		left++;
		right--;
	}

	return 0;
}
